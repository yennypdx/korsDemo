<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NegotiationProposalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_24"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:fontFamily="@font/ubuntu_font"
        android:text="@string/nego_title2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_8"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/ubuntu_font"
        android:text="@string/nego_new_due"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:layout_marginTop="@dimen/std_8">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/std_16"
            android:src="@mipmap/clock"
            android:contentDescription="@string/image_representation" />
        <TextView
            android:id="@+id/Proposed_new_completionDate"
            android:layout_width="@dimen/std_100"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/std_8"
            android:gravity="center_vertical"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/ubuntu_font" />
        <TextView
            android:id="@+id/Proposed_new_completionTime"
            android:layout_width="@dimen/std_100"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/std_5"
            android:gravity="center_vertical"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/ubuntu_font" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lines"
        android:layout_marginTop="@dimen/std_8"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_8"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:fontFamily="@font/ubuntu_font"
        android:text="@string/nego_title3"/>

    <EditText
        android:id="@+id/Proposed_reason_Output"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_60"
        android:layout_marginTop="@dimen/std_8"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:textSize="14sp"
        android:inputType="text"
        android:textColor="@color/dark_grey"
        android:gravity="top|left"
        android:padding="@dimen/std_2"
        android:background="@drawable/border" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/std_24">
        <Button
            android:id="@+id/proposalCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_16"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/ubuntu_font"
            android:text="@string/nego_cancel_button"/>
        <Button
            android:id="@+id/proposalSendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/ubuntu_font"
            android:text="@string/nego_send_button"/>
    </LinearLayout>

</LinearLayout>