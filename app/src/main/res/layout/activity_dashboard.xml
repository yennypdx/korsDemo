<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activities.DashboardActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_200"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginTop="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:contentDescription="@string/topbanner"
        android:scaleType="fitXY"
        android:src="@mipmap/dashboard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/std_16"
        android:layout_marginStart="@dimen/std_8"
        android:layout_marginEnd="@dimen/std_8">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="@dimen/std_200"
            android:layout_height="@dimen/std_80"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@mipmap/calendar_button"
            android:contentDescription="@string/calendarButton"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/activeChoresButton"
            android:layout_width="@dimen/std_200"
            android:layout_height="@dimen/std_80"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@mipmap/activeassignments_button"
            android:contentDescription="@string/activeChoresButton"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/std_16"
        android:layout_marginStart="@dimen/std_8"
        android:layout_marginEnd="@dimen/std_8">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/familyMemberButton"
            android:layout_width="@dimen/std_200"
            android:layout_height="@dimen/std_80"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@mipmap/familymember_button"
            android:contentDescription="@string/familyMemberButton"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="@dimen/std_200"
            android:layout_height="@dimen/std_80"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@mipmap/settings_button"
            android:contentDescription="@string/settingsButton"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/std_16"
        android:layout_marginStart="@dimen/std_8"
        android:layout_marginEnd="@dimen/std_8">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/adminRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/adminRoomButton"
                    android:layout_width="@dimen/std_200"
                    android:layout_height="@dimen/std_80"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/adminroom_button"
                    android:contentDescription="@string/settingsButton"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/negotiationBadgeNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/adminRelativeLayout"
                android:background="@drawable/item_count_badge"
                android:textColor="#fff"
                android:text="22"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>