<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/std_12"
    android:layout_marginBottom="@dimen/std_12"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/memberNameText"
        android:layout_width="@dimen/std_150"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_font"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/memberPositionText"
        android:layout_width="@dimen/std_150"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/std_50"
        android:fontFamily="@font/ubuntu_font"
        android:textColor="@color/light_grey"
        android:textSize="18sp"/>
</LinearLayout>
