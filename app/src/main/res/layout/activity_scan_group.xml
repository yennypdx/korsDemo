<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".activities.ScanGroupActivity">

    <Button
        android:id="@+id/scannerButton"
        android:layout_width="@dimen/std_250"
        android:layout_height="@dimen/std_60"
        android:layout_marginTop="@dimen/std_250"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:layout_gravity="center"
        android:text="@string/click_to_scan"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ubuntu_font"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@android:drawable/btn_default"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/std_40">
        <TextView
            android:id="@+id/code_con_text"
            android:text="@string/text_group_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_16"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/ubuntu_font"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/codeConfirmation"
            android:text="@string/scan_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_8"
            android:layout_marginEnd="@dimen/std_16"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/ubuntu_font"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/nextToCollectMemberDataFromScan"
        android:layout_width="@dimen/std_100"
        android:layout_height="@dimen/std_40"
        android:layout_marginTop="@dimen/std_8"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16"
        android:layout_gravity="center"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ubuntu_font"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@android:drawable/btn_default"/>

</LinearLayout>