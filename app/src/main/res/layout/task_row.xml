<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_80"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/std_16"
    android:layout_marginEnd="@dimen/std_16"
    android:padding="@dimen/std_5">

    <LinearLayout
        android:layout_width="@dimen/std_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_2"
        android:layout_marginBottom="@dimen/std_2"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/room_name_inRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_font"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/task_name_inRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ubuntu_font"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/child_name_inRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ubuntu_font"/>
    </LinearLayout>
    <TextView
        android:id="@+id/asgId_inRow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="@dimen/std_5"
        android:visibility="invisible"
        android:layout_gravity="center"/>

</LinearLayout>
